<div class="row section">
	<div class="col m6 s12 l6">
		<!-- <p>
			<%= user %>
		</p> -->
		<form
			class="center"
			action="/upload"
			method="post"
			enctype="multipart/form-data"
		>
			<p><%= __('You can upload upto 10 images at a time.') %></p>
			<p>
				<%= __('They should be 5 MB or less. (limitation can be removed)') %>
			</p>

			<label for="imagelol" class="uploader"
				><%= __('Upload image(s)') %>
				<input
					type="file"
					name="imagelol"
					id="imagelol"
					multiple="multiple"
					accept="image/*"
					onchange="update(this.files)"
				/>
			</label>
			<br />
			<p id="loaded" class="center"></p>
			<br />
			<button type="submit" class="center btn blue"><%= __('Submit') %></button>
		</form>

		<% if (message) { %>
		<h5><%= __('Message from server') %></h5>
		<p class="grey-text text-darken-2">
			<%= message.trim() %>
		</p>
		<% } %>
	</div>

	<div class="col m6 s12 l6">
		<h4 class="center"><%= __('Your images') %></h4>
		<p class="small lead-text center">
			<%= __('You can click on images to enlarge') %>
		</p>
		<div class="row">
			<% if (urls) { %> <% urls.forEach(url => { %>
			<div class="col l4 s4 m4" style="height: 250px; ">
				<img
					class="materialboxed"
					src="<%= url.a %>"
					style="width: 100%; height: 100%; object-fit: contain;"
				/>
				<a href="<%= url.a %>">
					<p class="center"><%= url.name.slice(0,20) %></p>
				</a>
			</div>
			<% }) %> <% } else { %>
			<p class="center"><%= __('You have no images uploaded') %></p>
			<% } %>
		</div>
	</div>
</div>
