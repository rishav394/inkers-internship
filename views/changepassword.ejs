<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('authHead.ejs') %>
		<title><%= __('Change Password') %></title>
	</head>

	<body>
		<div class="container row">
			<div class="center box col s12 m6 l4 push-m3 push-l4">
				<% if (message != undefined){ %>
				<p class="red"><%=message%></p>
				<% } %>
				<form action="/auth/changePassword" method="post" autocomplete="off">
					<div class="input-field">
						<input type="password" id="oldP" name="oldP" /><br />
						<label class="grey-text text-darken-2" for="oldP"
							><%= __('Current Password') %></label
						>
					</div>
					<div class="input-field">
						<input type="password" id="newP" name="newP" />
						<label class="grey-text text-darken-2" for="newP"
							><%= __('New Password') %></label
						>
					</div>
					<div class="input-field">
						<input type="password" id="newPC" name="newPC" />
						<label class="grey-text text-darken-2" for="newPC"
							><%= __('Confirm New Password') %></label
						>
					</div>
					<div>
						<button
							class="btn red waves-effect waves-light"
							type="submit"
							name="action"
						>
							<%= __('Change Password') %>
							<i class="material-icons right">send</i>
						</button>
					</div>
				</form>
				<a href="/login">
					<p class="blue-text"><%= __('Go to your home') %>!</p>
				</a>
			</div>
		</div>

		<script>
			$(document).ready(() => {
				if ($('p.red').html().length > 0) {
					$('.box').css('transform', 'translateY(30%)');
				}
			});
		</script>
	</body>
</html>
